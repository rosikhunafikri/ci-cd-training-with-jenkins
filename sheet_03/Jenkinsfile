pipeline {
    agent any
    stages {
        stage('Compile') {
            steps {
              dir('sheet_03'){
                sh 'make'
              }
            }
        }
        stage('Run') { 
            steps {
              dir('sheet_03'){
                sh './solution < ./samples/sample.in' 
              }
            }
        }
        stage('Test') { 
            steps {
              dir('sheet_03'){
                sh './solution < ./samples/sample.in | diff - ./samples/sample.out' 
                echo 'Good Test!'
              }
            }
        }
    }
}
